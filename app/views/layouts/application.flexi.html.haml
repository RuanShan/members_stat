!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "Flexi Generators", :name => "author"}/
    %title= content_for?(:title) ? "#{app_name} - #{yield(:title)}" : "时代浩博会员统计系统"
    = csrf_meta_tags
    = stylesheet "application", :media => "all"
    = yield(:stylesheet)
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
  %body
    .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to(app_name, root_path, :class => "navbar-brand")
        .collapse.navbar-collapse
          = render 'layouts/navbar'
          = render 'layouts/user_dropdown'
        / /.nav-collapse
    .container-fluid
      .row
        .col-sm-3.col-md-2.sidebar
          = render 'layouts/sidebar'
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          = content_tag(:h2, yield(:title), :class => 'page-header') if show_title
          = display_flash_message
          = yield
    / /.container
    = javascript_include_tag "application"
    = yield(:javascript)
