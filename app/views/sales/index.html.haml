.page-header
  = link_to new_sale_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    =t 'new_sale'
  %h1= t 'title.listing_sales'

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th= Sale.human_attribute_name(:customer)
        %th= Sale.human_attribute_name(:unit)
        %th= Sale.human_attribute_name(:price)
        %th
        %th
        %th

    %tbody
      - @sales.each do |sale|
        %tr
          %td= sale.customer.name
          %td= sale.unit
          %td= sale.price
          %td= link_to t('action.show'), sale
          %td= link_to t('action.edit'), edit_sale_path(sale)
          %td= link_to t('action.destroy'), sale, data: { confirm: 'Are you sure?' }, method: :delete
= paginate @sales
